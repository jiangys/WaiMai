@using PagedList.Mvc;
@model PagedList.IPagedList<ExpendLog>
@{
    ViewBag.Title = "用户报表";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
}
@section head{
    <style type="text/css">
        /*左边样式的变化*/
        .user-menu .menu_sec li.expend {
            background: none repeat scroll 0 0 #fff;
            border-bottom: 1px solid #e5e5e5;
            border-left: 3px solid #e95c00;
            border-top: 1px solid #e5e5e5;
            padding: 8px 0 8px 37px;
        }

        .user-box {
            background: none repeat scroll 0 0 #fff;
            border: 1px solid #dfdfdf;
            margin-bottom: 15px;
            padding: 15px;
        }
    </style>
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $(".doEdit").click(function () {
                var url = $(this).attr("data-href");
                wrapper.showModalDialog(url, 350, 380);
            });
        });
    </script>
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            我的消费 <small>我的消费明细</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">首页</a>
            </li>
            <li>
                我的消费
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-content">
                @if (!PP.WaiMai.WebHelper.OperateContext.Current.IsLogin())
                {
                    <div role="alert" class="alert alert-danger">
                        <span>亲，您还没有登陆，请先登陆!</span>
                    </div>
                }
                else
                {
                    <div class="user-box">
                        <div class="jifen-info clearfix">
                            <h4 class="fl">当前余额：<span style="color: #e95c00">&nbsp;@(@Model.Sum(m => m.RechargeAmount) - @Model.Sum(m => m.ConsumeAmount))&nbsp;</span>元</h4>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="200px">
                                        <i class="fa fa-clock-o"></i>&nbsp;日期
                                    </th>
                                    <th>
                                        <i class="fa fa-rmb"></i>&nbsp;消费金额
                                    </th>
                                    <th>
                                        <i class="fa fa-rmb"></i>&nbsp;充值金额
                                    </th>
                                    <th width="300px">
                                        <i class="fa fa-align-justify"></i>&nbsp;详细说明
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CreateDate
                                        </td>
                                        <td>
                                            @if (item.ConsumeAmount == 0)
                                            {
                                                <text>-</text>
                                            }
                                            else
                                            {
                                                @item.ConsumeAmount
                                            }
                                        </td>
                                        <td>
                                            @if (item.RechargeAmount == 0)
                                            {
                                                <text>-</text>
                                            }
                                            else
                                            {
                                                @item.RechargeAmount
                                            }
                                        </td>
                                        <td>
                                            @switch ((ExpendLogTypeEnum)item.ExpendLogType)
                                            {
                                                case ExpendLogTypeEnum.Order:
                                                    <text>@item.Description (订单号：@item.ExpendLogTypeID)</text>
                                                    break;
                                                case ExpendLogTypeEnum.Recharge:
                                                <text>@item.Description (充值号：@item.ExpendLogTypeID)</text>
                                                    break;
                                                default:
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("RepUser", new { page }))
                    </div>
                }
            </div>
        </div>
    </div>
</div>
