@model UpdateUserInfoModel
    @{
        ViewBag.Title = "修改个人信息";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
    }
    @section scripts{
        <script type="text/javascript">
            function onSuccessed(jsonData) {
                $.artDialogMsg(jsonData);
            }

        </script>
    }
    <div class="user-title">
        <h5 class="fl">修改个人信息</h5>
    </div>
    <div class="user-body">
        @using (Html.BeginForm("UpdateUserInfo", "user", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "真实姓名，唯一" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DepartmentType, new { @class = "col-md-3 control-label" })
                <div class="col-md-7">
                    @Html.DropDownListFor(model => model.DepartmentType, PP.WaiMai.Util.EnumHelper.GetSelectList(typeof(PP.WaiMai.Model.Enums.DepartmentTypeEnum)), "=请选择部门=", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DepartmentType)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    <input type="submit" value="确定更新" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
