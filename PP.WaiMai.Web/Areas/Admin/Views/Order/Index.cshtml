@using PagedList.Mvc;
@model PagedList.IPagedList<Order>
@{
    ViewBag.Title = "订单管理";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
}
@section head{
    <style type="text/css">
        /*左边样式的变化*/
        .user-menu .menu_sec li.order {
            background: none repeat scroll 0 0 #fff;
            border-bottom: 1px solid #e5e5e5;
            border-left: 3px solid #e95c00;
            border-top: 1px solid #e5e5e5;
            padding: 8px 0 8px 37px;
        }
    </style>
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            //$("#addRestaurant").click(function () {
            //    wrapper.showModalDialog("/admin/restaurant/add", 350, 380);
            //});
            $(".doEdit").click(function () {
                var url = $(this).attr("data-href");
                wrapper.showModalDialog(url, 350, 380);
            });
            $(".deDel").click(function () {
                var url = $(this).attr("data-href");
                var name = $(this).attr("data-name");
                var d = dialog({
                    title: '取消订单',
                    content: '是否要取消【' + name + '】的订单？',
                    okValue: '确定',
                    ok: function () {
                        this.title('正在提交..');
                        $.post(url, function (jsonData) {
                            $.procAjaxData(jsonData, function () {
                                window.location.reload();
                            });
                        });
                        return false;
                    },
                    cancelValue: '取消',
                    cancel: function () { }
                });
                d.show();
            });
        });
    </script>
}



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            订单管理 <small>修改删除订单</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">首页</a>
            </li>
            <li>
                订单管理
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title clearfix">
                @*<div class="fl">
                    <button class="btn blue thickbox" id="addRestaurant">
                        <i class="fa fa-plus"></i>&nbsp;订单管理
                    </button>
                </div>*@
                <div class="fr col-md-4">
                    @using (Html.BeginForm("Index", "Order", FormMethod.Post, new { @class = "form-inline", role = "form", id = "frmSubmit" }))
                    {
                        <div class="input-group">
                            <div class="input-cont">
                                <input type="text" name="Keyword" class="form-control" placeholder="关键字...">
                            </div>
                            <span class="input-group-btn">
                                <button class="btn btn-danger" type="submit">
                                    查询 &nbsp;
                                </button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <div class="portlet-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th width="12%">
                                    <i class="fa fa-thumb-tack"></i>&nbsp;订单号
                                </th>
                                <th width="10%">
                                    <i class="fa fa-github-alt"></i>&nbsp;昵称
                                </th>
                                <th>
                                    <i class="fa fa-align-justify"></i>&nbsp;菜单名称
                                </th>
                                <th>
                                    <i class="fa fa-rmb"></i>&nbsp;价格
                                </th>
                                <th>
                                    <i class="fa  fa-calendar"></i>&nbsp;数量
                                </th>
                                <th><span class="glyphicon glyphicon-time"></span>&nbsp;下单时间</th>
                                <th width="10%">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.OrderID
                                    </td>
                                    <td>
                                        @item.NickName
                                    </td>
                                    <td>
                                        @item.FoodMenu.MenuName
                                    </td>
                                    <td>
                                        @item.TotalPrice
                                    </td>
                                    <td>
                                        @item.TotalCount
                                    </td>
                                    <td>
                                        @item.CreateDate
                                    </td>
                                    <td>
                                        @if (@item.CreateDate.ToShortDateString() == DateTime.Now.ToShortDateString())
                                        {
                                            <button class="btn default btn-xs black btn-del deDel" data-name="@item.OrderID / @item.NickName.Trim() / @item.FoodMenu.MenuName" data-href="/admin/order/del/@item.OrderID">
                                                <i class="fa fa-trash-o"></i> 取消订单
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="btn default btn-xs black btn-del" disabled="disabled">
                                                已关闭
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>