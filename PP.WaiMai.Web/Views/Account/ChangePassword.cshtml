
@model ChangePasswordViewModel

@{
    ViewBag.Title = "修改密码";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
}
@section head{
    <style type="text/css">
        /*左边样式的变化*/
        .user-menu .menu_sec li.password {
            background: none repeat scroll 0 0 #fff;
            border-bottom: 1px solid #e5e5e5;
            border-left: 3px solid #e95c00;
            border-top: 1px solid #e5e5e5;
            padding: 8px 0 8px 37px;
        }
    </style>

}
@section scripts{
    <script type="text/javascript">
        function onSuccessed(jsonData) {
            $.artDialogMsg(jsonData);
        }

    </script>
}
<div class="user-title">
    <h5 class="fl">修改密码</h5>
</div>
<div class="user-body">
    @using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "onSuccessed" }, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "密码长度8~16位" })
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                <input type="submit" value="更改密码" class="btn btn-default" />
            </div>
        </div>
    }

</div>

